general {
    colors = true
    interval = 1
}

order += "volume master"
order += "tztime date"
order += "tztime time"

volume master {
	format = "Vol: %volume"
 	format_muted = "Vol (M):%volume"
 	device = "default"
 	mixer = "Master"
 	mixer_idx = 0
}

tztime date {
	format = "%d/%m/%y (%a)"
}

tztime time {
	format = "%H:%M"
}
